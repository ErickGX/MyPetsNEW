<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="#2c2c2c"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insira_o_usu_rio"
        android:inputType="textPersonName"
        android:maxLength="100"
        android:textColorHint="#757575"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:hint="@string/insira_sua_senha"
        android:inputType="textPassword"
        android:maxLength="51"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entrar"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sair" />

    <TextView
        android:id="@+id/txtEsqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqueceu_sua_senha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Insira seu nome"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_baseline_favorite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="9" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:onClick="acessaJanela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acessar"
        style="button"/>



</LinearLayout>